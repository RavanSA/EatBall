<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="2dp"
    app:cardElevation="3dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/shadow">

        <!--Image view for displaying our image-->
        <ImageView

            android:id="@+id/idIVimage"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:padding="3dp"
            android:src="@drawable/profile"/>

        <!--Text view for displaying our text -->
        <TextView
            android:id="@+id/newstitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-384dp"
            android:layout_marginTop="400dp"
            android:layout_toEndOf="@id/idIVimage"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="22sp"
            android:text="Category Text"
            android:textAlignment="center"

            android:textColor="@color/black"
            android:layout_marginLeft="-384dp"
            android:layout_toRightOf="@id/idIVimage" />

        <TextView
            android:id="@+id/newstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-154dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="430dp"
            android:layout_toEndOf="@id/newstitle"
            android:layout_toRightOf="@id/idIVimage"
            android:gravity="center"
            android:padding="10dp"
            android:text="NEWS LÄ°ST"

            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>