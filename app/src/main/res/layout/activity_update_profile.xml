<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfile"
    android:background="@color/prfback">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="20dp"
        android:background="@color/prftop"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/uptfullname"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=" kjhgfd"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/uptemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uptfullname"
            android:layout_centerVertical="true"

            android:text=" "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/uptgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uptemail"
            android:layout_centerVertical="true"

            android:text=" "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/uptage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uptgender"
            android:layout_centerVertical="true"

            android:text=" "
            android:textSize="16sp" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/profilephoto"
        android:layout_width="130dp"
        android:layout_height="127dp"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349" />

    <Button

        android:id="@+id/updatepohto"
        style="@android:style/Widget.Button"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/prftop"
        android:cursorVisible="true"
        android:radius="100dp"
        android:text="UPDATE photo"
        android:textColor="#000"
        android:textSize="20dp"

        android:textStyle="normal|bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilephoto" />

    <EditText

        android:id="@+id/ageupdate"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:autofillHints=""
        android:cursorVisible="true"
        android:hint="@string/mobile_number"
        android:inputType="textEmailAddress"
        android:textColor="@color/placeholdercolor"
        android:textColorHint="@color/placeholdercolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameupdate" />

    <Button

        android:id="@+id/updateUser"
        style="@android:style/Widget.Button"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/prftop"
        android:cursorVisible="true"
        android:radius="100dp"
        android:text="UPDATE"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderupdate" />

    <EditText

        android:id="@+id/nameupdate"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="404dp"
        android:autofillHints=""
        android:cursorVisible="true"
        android:hint="FullName"
        android:inputType="textEmailAddress"
        android:textColor="@color/placeholdercolor"
        android:textColorHint="@color/placeholdercolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/genderupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageupdate">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="Male" />



        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>